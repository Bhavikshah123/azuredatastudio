{
	"extends": "../tsconfig.base.json",
	"compileOnSave": true,
	"compilerOptions": {
		"jsx": "react",
		"outDir": "./out",
		"lib": [
			"es6",
			"es2015.promise",
			"dom"
		],
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"declaration": false,
		"strict": false,
		"noImplicitAny": false,
		"noUnusedParameters": false,
		"noImplicitReturns": false,
		"noUnusedLocals": false,
		"strictNullChecks": false
	},
	"exclude": [
		"node_modules",
		"src/webviews"
	],
	"include": [
		"./**/*.tsx",
		"./**/*.ts"
	]
}
